{
  "name": "mouban-showcase",
  "version": "1.0.0",
  "description": "豆瓣收藏数据展示",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/static/css/input.css -o ./src/static/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/static/css/input.css -o ./src/static/css/tailwind.css --watch",
    "dev": "npm run watch:css",
    "build": "npm run build:css",
    "clean": "rimraf ./src/static/css/tailwind.css",
    "start": "concurrently \"npm run watch:css\" \"python run.py\""
  },
  "keywords": [
    "douban",
    "flask",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "tailwindcss": "^4.1.6"
  }
}
